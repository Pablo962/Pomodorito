---
import BackgroundManager from '../components/Background/BackgroundManager.jsx';
import Timer from '../components/Pomodoro/Timer.jsx';
import Board from '../components/Kanban/Board.jsx';
import Player from '../components/Spotify/Player.jsx'; 
import '../styles/global.css';
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Pomodoro Focus</title>
	</head>
	<body>
		<BackgroundManager client:only="react">
            
            <div style="
                display: flex;
                flex-direction: row; /* Elementos lado a lado */
                justify-content: center;
                align-items: flex-start; /* Alineados arriba */
                gap: 2rem; /* Espacio entre ventanas */
                padding: 4rem 2rem;
                width: 100%;
                height: 100vh;
                overflow-x: auto; /* Scroll horizontal si no caben */
                flex-wrap: wrap; /* Bajarán de línea si la pantalla es chica */
            ">
                
                <div style="display: flex; flex-direction: column; gap: 1rem; width: 400px; flex-shrink: 0;">
				    <Timer client:load />
                    <Player client:load />
                </div>

                <div style="flex-grow: 1; max-width: 900px; min-width: 300px;">
                    <Board client:load />
                </div>

			</div>

		</BackgroundManager>
	</body>
</html>